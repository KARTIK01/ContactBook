<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar.Solid.ContactBook</item>
    </style>

    <!-- ActionBar style -->
    <style name="ActionBar.Solid.ContactBook" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/app_theme_color</item>
    </style>

    <!-- Main activity action bar style -->
    <style name="ActionBar.Solid.Sunshine.NoTitle" parent="AppTheme">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_launcher</item>
    </style>

    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/RobotoCondensed-Regular.ttf</item>
    </style>
</resources>
