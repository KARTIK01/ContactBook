<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingPrefix">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10.0dip">

            <TextView
                fontPath="fonts/Roboto-Thin.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="20.0dip"
                android:text="Enter Your Mobile Number\nRegistered To College Server"
                android:textColor="@color/app_theme_color" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/no_edit_text"
                fontPath="fonts/Roboto-Thin.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:inputType="number"
                android:textSize="34sp"
                app:met_floatingLabel="highlight"
                app:met_maxCharacters="10"
                app:met_primaryColor="@color/app_theme_color"
                app:met_singleLineEllipsis="true"
                app:met_textColor="@color/app_theme_color" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pickContacts"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:padding="5.0dip"
                android:src="@drawable/pick_contact" />

            <TextView
                fontPath="fonts/Roboto-Thin.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5.0dip"
                android:text="PICK FROM\nYOUR CONTACTS"
                android:textColor="@color/app_theme_color" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="10.0dip">

        <com.gc.materialdesign.views.ProgressBarCircularIndeterminate

            android:id="@+id/progressBarCircularIndeterminate"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@color/app_theme_color"
            android:visibility="gone" />

    </LinearLayout>
</FrameLayout>

